<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.andreasogeirik.master_frontend.layout.view.CustomTextView
        android:id="@+id/name_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:id="@+id/post_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:weightSum="20"
        android:background="@drawable/shape_post_background"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/name_user"
        >

        <RelativeLayout
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/my_profile_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/default_profile"
            />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/left_header_fragment_container"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </RelativeLayout>

    </LinearLayout>

    <com.andreasogeirik.master_frontend.layout.view.CustomButton
        android:id="@+id/participating_events_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EVENTS"
        android:layout_below="@+id/post_list_header"
        android:background="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <com.andreasogeirik.master_frontend.layout.view.CustomTextView
        android:id="@+id/posts_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:background="@drawable/shape_post_background"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/participating_events_btn"
        />
</RelativeLayout>