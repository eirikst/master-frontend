<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:background="@drawable/background_transparent"
android:orientation="horizontal"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape_post_background"
        >
        <LinearLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/comment_image"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_margin="5dp"
                >

                <com.andreasogeirik.master_frontend.layout.view.CustomTextView
                    android:id="@+id/comment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name comes here"
                    android:textStyle="bold"
                    />

                <com.andreasogeirik.master_frontend.layout.view.CustomTextView
                    android:id="@+id/comment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date comes here"
                    android:layout_below="@+id/comment_name"
                    android:textStyle="italic"
                    />

                <com.andreasogeirik.master_frontend.layout.view.CustomTextView
                    android:id="@+id/comment_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/comment_date"
                    android:text="Message comes here"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/upper_like_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_layout"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:gravity="center_horizontal"
            >
            <com.andreasogeirik.master_frontend.layout.view.CustomTextView
                android:id="@+id/comment_like_nr"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0 likes"
                android:gravity="center_horizontal"
                />

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >
                <LinearLayout
                    android:id="@+id/like_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_mood_black_24dp"
                        android:layout_marginRight="5dp"
                        />

                    <com.andreasogeirik.master_frontend.layout.view.CustomTextView
                        android:id="@+id/comment_like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/like"
                        android:text="Lik"
                        />
                </LinearLayout>

                <LinearLayout
                android:id="@+id/unlike_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/unlike"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_mood_red_24dp"
                        android:layout_marginRight="5dp"
                        />

                    <com.andreasogeirik.master_frontend.layout.view.CustomTextView
                        android:id="@+id/comment_unlike_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/like"
                        android:text="Liker"
                        android:textColor="@color/app_red"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>