<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.andreasogeirik.master_frontend">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme.NoActionBar"
        android:label="@string/app_name"
        >

        <activity
            android:name=".application.auth.entrance.EntranceActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".application.auth.login.LoginActivity"
            />
        <activity android:name=".application.main.MainPageActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".application.user.profile.ProfileActivity"/>
        <activity android:name=".application.user.friend.FriendListActivity" />
        <activity
            android:name=".application.user.profile_not_friend.ProfileOthersActivity"/>
        <activity android:name=".application.auth.register.RegisterActivity" />
        <activity android:name=".application.auth.welcome.WelcomeActivity" />
        <activity android:name=".application.event.create.CreateEventActivity"
            android:label=""/>
        <activity android:name=".application.settings.SettingsActivity" />
        <activity android:name=".application.event.main.EventActivity">
        </activity>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
        <activity android:name=".application.auth.register.camera.CameraActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
